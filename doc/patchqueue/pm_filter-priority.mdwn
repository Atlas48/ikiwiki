+       chmod +x ikiwiki.out
+       LANG=C ./ikiwiki.out doc html --templatedir=templates \
                --underlaydir=basewiki \
                --wikiname="ikiwiki" --verbose --no-rcs \
                --exclude=/discussion --no-discussion --userdir=users \
@@ -32,7 +34,6 @@
