--- lib-fixup.pl        (revision 0)
+++ lib-fixup.pl        (revision 0)
@@ -0,0 +1,9 @@
+#!/usr/bin/perl -i.bak -p
+use strict;
+use warnings;
+my @dirs = $ENV{PERL5LIB} =~ /:/ ? split /:/, $ENV{PERL5LIB} : $ENV{PERL5LIB};
+if (@dirs) {
+    my $libs = join('', map { " use lib '$_';\n" } @dirs);
+    s/(use IkiWiki;)/$libs$1/;
+}
